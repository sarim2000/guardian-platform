# syntax=docker.io/docker/dockerfile:1

# Development Dockerfile for Guardian Platform
ARG NODE_VERSION=20.18.0
FROM node:${NODE_VERSION}-alpine

# Add labels
LABEL maintainer="Guardian Platform Team"
LABEL description="Guardian Platform - Development Environment"

# Install system dependencies
RUN apk add --no-cache \
    libc6-compat \
    python3 \
    make \
    g++ \
    git \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY .npmrc* ./

# Install all dependencies (including dev)
RUN npm ci && npm cache clean --force

# Expose ports
EXPOSE 3000
EXPOSE 5555

# Set development environment
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Mount points for development
VOLUME ["/app/src", "/app/public", "/app/.env.local"]

# Development command with hot reload
CMD ["npm", "run", "dev"]